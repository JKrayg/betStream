{
  "name": "betstream",
  "version": "1.0.0",
  "description": "Live gambling/ betting website where users can place bets while also streaming sports content in a party with friends over webcam/mic.",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JKrayg/betStream.git"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "homepage": "https://github.com/JKrayg/betStream#readme",
  "dependencies": {
    "axios": "^0.19.2",
    "express": "^4.17.1",
    "gh-pages": "^3.1.0",
    "if-env": "^1.0.4",
    "jquery": "^3.5.1",
    "mongoose": "^5.10.0",
    "react-router": "^5.2.0",
    "simple-peer": "^9.7.2",
    "socket.io": "^2.3.0",
    "uuid": "^8.3.0"
  }
}
